<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_server"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital Warehouse APP"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Petición de material"
        android:textSize="38dp"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        android:layout_below="@+id/textView"/>

    <CheckBox
        android:id="@+id/checkBox_sabanas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:textSize="30dp"
        android:text="Sábanas"/>

    <EditText
        android:id="@+id/editNumber_sabanas"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_marginLeft="180dp"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBox_camas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_sabanas"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:textSize="30dp"
        android:text="Camas" />

    <EditText
        android:id="@+id/editNumber_camas"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_sabanas"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_marginLeft="180dp"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBox_mesas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_camas"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:textSize="30dp"
        android:text="Mesas" />

    <EditText
        android:id="@+id/editNumber_mesas"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_camas"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_marginLeft="180dp"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBox_sillas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_mesas"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:textSize="30dp"
        android:text="Sillas" />

    <EditText
        android:id="@+id/editNumber_sillas"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_mesas"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_marginLeft="180dp"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBox_sillones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_sillas"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:textSize="30dp"
        android:text="Sillones" />

    <EditText
        android:id="@+id/editNumber_sillones"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_sillas"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_marginLeft="180dp"
        android:inputType="number" />


    <EditText
        android:id="@+id/edMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:text="Message from Client"
        android:layout_below="@+id/checkBox_sillones" />


    <Button
        android:id="@+id/send_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_pressed"
        android:onClick="onClick"
        android:text="Send Message to server"
        android:textColor="@android:color/white" />

</RelativeLayout>